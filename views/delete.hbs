<div class="poems">
  {{#each poems}}
    <div class="poem_card">
      <h2>{{this.title}}</h2>
      <p>{{this.text}}</p>
      <p>- {{this.user.name}}</p>
       <p>
        <a href="/delete/{{this._id}}" class="btn btn-danger">Delete</a>
      </p>
    </div>
  {{/each}}
</div>

<h2>Poems</h2>
{{#if currentUser}}
  {{#each poems}}
    <div class="card">
      <div class="card-header"><h6>{{this.title}}</h3></div>
    <div class="card-body">
      <p class="card-text">
      {{this.text}}
      </p>
      <p>- {{this.user.name}}</p>
      <p>
        <a href="/delete/{{this._id}}" class="btn btn-danger">Delete</a>
      </p>
    </div>
    <div class="card-footer text-muted">{{this.formattedDate}}</div>
    </div>
    <br>
  {{/each}}
  {{else}}
    <p>Must be logged in as admin to delete</p>
  {{/if}}
