<h1>{{title}}</h1>
<p>Welcome to {{title}}
  {{#if currentUser}}
  , {{currentUser.first_name}}
  {{/if}}
</p>



<h2>Poems</h1>

  {{#each poems}}
    <div class="card">
      <div class="card-header"><h6>{{this.title}}</h3></div>
      <div class="card-body">
        <p class="card-text">
          {{this.text}}
        </p>
      </div>
    </div>
    <br>
  {{/each}}
